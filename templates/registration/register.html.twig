{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-center text-white">Register</h1>

    {{ form_errors(registrationForm) }}

    <div class="border register shadow-lg p-3 mb-5 rounded mx-5 px-5">
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.birthday) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">Register</button>
        <div class="text-center">Heb je al een account? <a href="{{ path('app_login') }}">Login</a></div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
